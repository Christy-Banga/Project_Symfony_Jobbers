{% extends 'user/index.html.twig' %}

    {% block title %}Modification de mot de passe  de {{ app.user.firstname }} {{ app.user.name }} {% endblock %}


{% block bodyuser %}
    <div class="grix xs4 container">

        {% for message in app.flashes("error") %}
            <div class="col-xs1">
                <div class="p-3 my-2 rounded-2 error">{{message }}</div>
            </div>
        {% endfor %}

        <div class="col-xs3">
            <h3>Modification de Mot de Passe de {{ app.user.firstname }} {{ app.user.name }}</h3>
            <form method="post">


                <div class="form-field">
                    <label for="pass">Mot de passe</label>
                    <input type="password" id="pass" name="pass" class="form-control">
                </div>


                <div class="form-field">
                    <label for="pass2">Confirmer le mot de passe</label>
                    <input type="password" id="pass2" name="pass2" class="form-control">
                </div>
                <button class="btn blue">Valider</button>
                {# <button class="btn shadow-1 rounded-1 blue">Valider</button> #}

            </form>

        </div>
    </div>
{% endblock %}
