                <div class="p-3 my-2 rounded-2 error">{{message }}</div>
            </div>
        {% endfor %}
        <div class="col-xs3">
            <h3>Modification de profil de {{ app.user.firstname }} {{ app.user.name }}</h3>
            <form method="post">
