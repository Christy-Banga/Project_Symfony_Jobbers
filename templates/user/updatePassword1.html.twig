                    <input type="password" id="password1" class="form-control rounded-1"  />
                    <label for="password1">Mot de passe</label>
                </div>
                <div class="form-field">
                    <input type="password" id="password2" class="form-control rounded-1"  />
                    <label for="password2">Confirm√© le mot de passe</label>
                </div>

                <button class="btn shadow-1 rounded-1 blue">Valider</button>
            </form>

        </div>
    </div>
{% endblock %}
