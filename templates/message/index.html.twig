{% extends 'message.html.twig' %}

{% block title %} Messagerie{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Messagerie</h1>
                <p>Boite de récepetion </p>
                <p>Messages récus:{{ app.user.received|length}} </p>
                <p>Messages envoyés: {{ app.user.sent|length}} </p>
                <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                    Menu principal
                </a>
                <a href="{{ path('app_send') }}" class="btn btn-primary"> Envoyé un message</a>
            </div>
        </div>

    </section>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers </h2>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group">
                <a href="{{ path('app_message') }}" class="list-group-item list-group-item active">
                    Acceuil</a>
            </div>

            <div class="list-group">
                <a href="{{ path('app_received') }}" class="list-group-item list-group-item ">
                    Boite de récepetion </a>
            </div>

            <div class="list-group">
                <a href="{{ path('app_message') }}" class="list-group-item list-group-item ">
                    Messages envoyés</a>
            </div>


        </div>
    </div>

{% endblock %}
