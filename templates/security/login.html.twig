{% extends 'user.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="main-login">
    <section style="display: block;">
        <div class="container-fluid login w-50 mt-5">
            <div class="row register"> 
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <form method="post" class="w-100" style:'display: block;margin-top: 0em;'>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        {% endif %}

                        <h2 class="form-title">Connexion</h2>
                        <div>
                            <label for="inputEmail">Email:</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div>
                            <label for="inputPassword">Mot de passe:</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                        <span>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </span>
                        

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

                        <button type="submit" class="submit-login mt-3">Sign In</button>
                        <p><a href="{{ path("app_forgot_password_request") }}">Mot de passe oublié</a></p>
                        <p class="loginhere">
                            Have not account ? <a href="/register" class="loginhere-link">Register here</a>
                        </p>
                    </form>
                <div>
                <div class="col-md-1"></div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
