{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}
    <!--banner-slider-->
    <!-- main-slider -->
    <section class="w3l-main-slider" id="home">
        <div class="banner-content">
        <div id="demo-1"
            data-zs-src='["assets/images/slider1.jpg", "assets/images/slider2.jpg","assets/images/slider3.jpg", "assets/images/slider4.jpg"]'
            data-zs-overlay="dots">
            <div class="demo-inner-content">
            <div class="container">
                <div class="banner-infhny">
                <h3>Vous avez besoin d'artisans (plombiers, menuisiers, jardinniers ...)</h3>
                <h6 class="mb-3">Recherchez parmi les annonces</h6>
                <div class="flex-wrap search-wthree-field mt-md-5 mt-4">
                    {{ form_start(form,{'attr':{'class':'booking-form',}}) }}
                    <div class="row book-form">

                        <div class="form-input col-md-4 mt-md-0 mt-3">
                            {{ form_widget(form.mots, {'attr': {'class': 'selectpicker', 'placeholder' : 'Entrez des mots clés'}}) }}
                        </div>
                        <div class="form-input col-md-4 mt-md-0 mt-3">
                            {{ form_widget(form.categorie, {'attr': {'class': 'selectpicker'}}) }}
                        </div>
                        <div class="bottom-btn col-md-4 mt-md-0 mt-3">
                            {{ form_widget(form.Rechercher, {'attr': {'class': 'btn btn-style btn-secondary'}}) }}
                                {# <span class="fa fa-search mr-3"aria-hidden="true"></span>  #}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </section>
    <!-- /main-slider -->
    <!-- //banner-slider-->

    <!--/grids-->
    <section class="w3l-grids-3 py-5">
        <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Consultez</h6>
            <h3 class="hny-title">Les annonces</h3>
        </div>
        <div class="row bottom-ab-grids">
            <!--/row-grids-->
                {% for service in services %}
                <div class="col-lg-6 subject-card mt-lg-0 mt-4">
                <div class="subject-card-header p-4">
                    <div href="#" class="card_title p-lg-4d-block">
                    <div class="row align-items-center">
                        <div class="col-sm-5 subject-img">
                        <img src="{{asset('assets/images/g1.jpg')}}" class="img-fluid" alt="">
                        </div>
                        <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                        <h4>{{service.title}}</h4>
                        <p>xxxxxx</p>
                        <div class="dst-btm">
                            <h6 class=""> {{service.category}} </h6>
                            <a href="{{ path('service-read',{slug: service.slug}) }}"><span class="fa fa-search mr-3"aria-hidden="true">Voir plus</span></a>
                        </div>
                        <p class="sub-para">{{service.content|striptags|u.truncate(70,'...') }}</p>
                        </div>
                    </div>
                    </div>
                </div>
                </div>
                {% endfor %}
            <!--//row-grids-->
        </div>
        </div>

        <div class="pagination justify-content-center">
        {{knp_pagination_render(services)}}
        </div>
    </section>
    <!--//grids-->

    <!-- stats -->
    <section class="w3l-stats py-5" id="stats">
        <div class="gallery-inner container py-lg-0 py-3">
        <div class="row stats-con pb-lg-3">
            <div class="col-lg-3 col-6 stats_info counter_grid">
            <p class="counter">730</p>
            <h4>Artisans</h4>
            </div>
            <div class="col-lg-3 col-6 stats_info counter_grid1">
            <p class="counter">1680</p>
            <h4>Utilisateurs</h4>
            </div>
            <div class="col-lg-3 col-6 stats_info counter_grid mt-lg-0 mt-5">
            <p class="counter">812</p>
            <h4>Annonces</h4>
            </div>
            <div class="col-lg-3 col-6 stats_info counter_grid2 mt-lg-0 mt-5">
            <p class="counter">990</p>
            <h4>Métiers</h4>
            </div>
        </div>
        </div>
    </section>
    <!-- //stats -->
{% endblock %}
