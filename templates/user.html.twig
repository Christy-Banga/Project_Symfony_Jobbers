<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@1.3.0/dist/css/axentix.min.css">

    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">

    <script src="https://cdn.jsdelivr.net/npm/axentix@1.3.0/dist/js/axentix.min.js"></script>
    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
    <script src="{{ asset("js/scripts.js") }}"></script>

</head>
<body class="layout with-sidenav">
<header>
    <nav class="navbar shadow-1 primary">
        <a href="{{path('app_home') }}" class="navbar-brand">OpenJobs</a>
        <div class="ml-5">
            <a href="{{ path('app_home') }}">Accueil </a>
        </div>
        <div class="navbar-menu ml-auto">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="navbar-link" href="{{ path('app_logout') }}">Se déconnecter</a>
            {% else %}
                <a class="navbar-link" href="{{ path('app_login') }}">Se connecter</a>
                <a class="navbar-link" href="{{ path('app_register') }}">Créer un compte</a>
            {% endif %}
        </div>
    </nav>
</header>

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div id="example-sidenav" data-ax="sidenav" class="sidenav shadow-1 large fixed white">
    <div class="sidenav-header">
        <button data-target="example-sidenav" class="sidenav-trigger"><i class="fas fa-times"></i></button>
        <img class="sidenav-logo dropshadow-1" src="#" alt="" />
    </div>
    <a href="{{ path("app_user") }}" class="sidenav-link">

        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z"/>
        </svg> <strong>Profil</strong>


    </a>
    <a href="{{ path("user_service_ajout") }}" class="sidenav-link">

        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-megaphone" viewBox="0 0 16 16">
            <path d="M13 2.5a1.5 1.5 0 0 1 3 0v11a1.5 1.5 0 0 1-3 0v-.214c-2.162-1.241-4.49-1.843-6.912-2.083l.405 2.712A1 1 0 0 1 5.51 15.1h-.548a1 1 0 0 1-.916-.599l-1.85-3.49a68.14 68.14 0 0 0-.202-.003A2.014 2.014 0 0 1 0 9V7a2.02 2.02 0 0 1 1.992-2.013 74.663 74.663 0 0 0 2.483-.075c3.043-.154 6.148-.849 8.525-2.199V2.5zm1 0v11a.5.5 0 0 0 1 0v-11a.5.5 0 0 0-1 0zm-1 1.35c-2.344 1.205-5.209 1.842-8 2.033v4.233c.18.01.359.022.537.036 2.568.189 5.093.744 7.463 1.993V3.85zm-9 6.215v-4.13a95.09 95.09 0 0 1-1.992.052A1.02 1.02 0 0 0 1 7v2c0 .55.448 1.002 1.006 1.009A60.49 60.49 0 0 1 4 10.065zm-.657.975 1.609 3.037.01.024h.548l-.002-.014-.443-2.966a68.019 68.019 0 0 0-1.722-.082z"/>
        </svg>

        <strong>Annonce(s)</strong></a>
    <a href="{{ path("app_message") }}" class="sidenav-link">

        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"/>
        </svg>

        <button type="button"><strong>Messagerie</strong></button>
    </a>

</div>
{% endif %}
<main>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <button data-target="example-sidenav"
            class="btn rounded-1 press amaranth dark-1 sidenav-trigger hide-md-up">
        Open sidenav
    </button>
    {% endif %}
    {% block body %}{% endblock %}
</main>

<script src="https://cdn.jsdelivr.net/npm/axentix@1.3.0/dist/js/axentix.min.js">
</script>
<script src="{{ asset('js/scripts.js') }}"> </script>
</body>

</html>
